  "bugs": {
    "url": "https://github.com/rajdhandus/popUp/issues"
  },
  "homepage": "https://github.com/rajdhandus/popUp#readme",
  "dependencies": {
    "axios": "^0.18.0",
    "body-parser": "^1.18.3",
    "dotenv": "^6.0.0",
    "express": "^4.16.3",
    "mongoose": "^5.2.5",
    "morgan": "^1.9.0",
    "path": "^0.12.7",
    "react-router-dom": "^4.3.1"
  }
}